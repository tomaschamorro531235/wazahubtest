local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

local Window = Rayfield:CreateWindow({
	Name = "ðŸ§  Waza Hub | Brainrot ESP",
	LoadingTitle = "Cargando...",
	LoadingSubtitle = "Detectando brainrots...",
	ConfigurationSaving = {
		Enabled = true,
		FolderName = "WazaBrainrotESP",
		FileName = "BrainrotSettings"
	},
	KeySystem = false
})

local Tab_ESP = Window:CreateTab("ðŸ§  Brainrot ESP", 4483362458)

local brainrotESPEnabled = false
local brainrotESPConnection = nil
local brainrotESPInstances = {}

local brainrotRarities = {
	-- Common (verde)
	["Noobini Pizzanini"] = "Common", ["LirilÃ¬ LarilÃ "] = "Common", ["Tim Cheese"] = "Common",
	["Fluriflura"] = "Common", ["Talpa Di Fero"] = "Common", ["Svinina Bombardino"] = "Common",
	["Pipi Kiwi"] = "Common",

	-- Rare (azul)
	["Trippi Troppi"] = "Rare", ["Tung Tung Tung Sahur"] = "Rare", ["Gangster Footera"] = "Rare",
	["Bandito Bobritto"] = "Rare", ["Boneca Ambalabu"] = "Rare", ["Cacto Hipopotamo"] = "Rare",
	["Ta Ta Ta Ta Sahur"] = "Rare", ["Tric Trac Baraboom"] = "Rare",

	-- Epic (morado)
	["Cappuccino Assassino"] = "Epic", ["Brr Brr Patapim"] = "Epic", ["Trulimero Trulicina"] = "Epic",
	["Bambini Crostini"] = "Epic", ["Bananita Dolphinita"] = "Epic", ["Perochello Lemonchello"] = "Epic",
	["Brri Brri Bicus Dicus Bombicus"] = "Epic", ["Avocadini Guffo"] = "Epic", ["Salamini Penguini"] = "Epic",

	-- Legendary (dorado)
	["Burbaloni Loliloli"] = "Legendary", ["Chimpanzini Bananini"] = "Legendary",
	["Ballerina Cappuccina"] = "Legendary", ["Chef Crabracadabra"] = "Legendary",
	["Lionel Cactuseli"] = "Legendary", ["Glorbo Fruttodrillo"] = "Legendary",
	["Blueberrinni Octopusini"] = "Legendary", ["Strawberelli Flamingelli"] = "Legendary",
	["Pandaccini Bananini"] = "Legendary",

	-- Mythic (rojo)
	["Frigo Camelo"] = "Mythic", ["Orangutini Ananassini"] = "Mythic", ["Rhino Toasterino"] = "Mythic",
	["Bombardiro Crocodilo"] = "Mythic", ["Bombombini Gusini"] = "Mythic", ["Cavallo Virtuoso"] = "Mythic",
	["Gorilla Watermelondrillo"] = "Mythic", ["Spioniro Golubiro"] = "Mythic", ["Zibra Zubra Zibralini"] = "Mythic",
	["Tigrilini Watermelini"] = "Mythic",

	-- God (ðŸŒˆ rainbow)
