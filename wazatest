local rainbow = 0

Tab_ESP:CreateToggle({
	Name = "Nametag Brainrots (con colores)",
	CurrentValue = false,
	Callback = function(enabled)
		brainrotESPEnabled = enabled

		if not enabled then
			if brainrotESPConnection then brainrotESPConnection:Disconnect() end
			for _, gui in pairs(brainrotESPInstances) do
				if gui and gui.Parent then gui:Destroy() end
			end
			brainrotESPInstances = {}
			return
		end

		brainrotESPConnection = game:GetService("RunService").RenderStepped:Connect(function()
			rainbow += 0.01
			if rainbow >= 1 then rainbow = 0 end
			local rainbowColor = Color3.fromHSV(rainbow, 1, 1)

			for _, model in ipairs(workspace:GetChildren()) do
				if model:IsA("Model") and brainrotRarities[model.Name] and not brainrotESPInstances[model] then
					local root = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart")
					if root then
						local rarity = brainrotRarities[model.Name]

						local color = ({
							Common = Color3.fromRGB(0, 255, 0),      -- Verde
							Rare = Color3.fromRGB(0, 170, 255),       -- Azul
							Epic = Color3.fromRGB(170, 85, 255),      -- Morado
							Legendary = Color3.fromRGB(255, 215, 0),  -- Dorado
							Mythic = Color3.fromRGB(255, 0, 0),       -- Rojo
							Secret = Color3.fromRGB(0, 0, 0)          -- Negro
						})[rarity] or Color3.fromRGB(255, 255, 255)

						local gui = Instance.new("BillboardGui")
						gui.Name = "BrainrotESP"
						gui.Size = UDim2.new(0, 140, 0, 25)
						gui.AlwaysOnTop = true
						gui.Adornee = root
						gui.StudsOffset = Vector3.new(0, 3.5, 0)

						local label = Instance.new("TextLabel")
						label.Size = UDim2.new(1, 0, 1, 0)
						label.BackgroundTransparency = 1
						label.Text = model.Name .. " [" .. rarity .. "]"
						label.TextColor3 = (rarity == "God" and rainbowColor) or color
						label.Font = Enum.Font.GothamBold
						label.TextScaled = true
						label.TextStrokeTransparency = 0.2
						label.Parent = gui

						gui.Parent = model
						brainrotESPInstances[model] = label
					end
				end
			end

			-- Actualizar color rainbow para los god
			for model, label in pairs(brainrotESPInstances) do
				if brainrotRarities[model.Name] == "God" then
					label.TextColor3 = Color3.fromHSV(rainbow, 1, 1)
				end
				if not model:IsDescendantOf(workspace) then
					label.Parent:Destroy()
					brainrotESPInstances[model] = nil
				end
			end
		end)
	end
})
